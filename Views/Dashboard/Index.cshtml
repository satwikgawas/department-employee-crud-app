@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-2">
    <div class="container-fluid">
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h2 class="text-danger">Dashboard</h2>
            </div>
        </div>
        <hr />
    </div>

    <div class="row g-4">

        <!-- HR & Payroll -->
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill display-4 text-primary"></i>
                    <h5 class="card-title mt-2">Human Resources &Aacute; Payroll</h5>
                    <p class="card-text">Manage employee data, payroll, and HR policies.</p>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-around">
                        <div class="text-center">
                            <i class="bi bi-calendar-check-fill text-success"></i>
                            <div class="small">Attendance</div>
                        </div>
                        <div class="text-center">
                            <i class="bi bi-clock-fill text-warning"></i>
                            <div class="small">Leave</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Finance -->
        <div class="col-md-4">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack display-4 text-success"></i>
                    <h5 class="card-title mt-2">Finance</h5>
                    <p class="card-text">Manage budgeting, expenses, and accounting reports.</p>
                </div>
            </div>
        </div>

        <!-- Sales -->
        <div class="col-md-4">
            <div class="card shadow-sm border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-line-fill display-4 text-warning"></i>
                    <h5 class="card-title mt-2">Sales</h5>
                    <p class="card-text">Track opportunities, quotes, and customer deals.</p>
                </div>
            </div>
        </div>

        <!-- Purchase -->
        <div class="col-md-4">
            <div class="card shadow-sm border-info">
                <div class="card-body text-center">
                    <i class="bi bi-cart-fill display-4 text-info"></i>
                    <h5 class="card-title mt-2">Purchase</h5>
                    <p class="card-text">Handle supplier orders, purchase planning, and vendors.</p>
                </div>
            </div>
        </div>

        <!-- Documents -->
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-arrow-up-fill display-4 text-primary"></i>
                    <h5 class="card-title mt-2">Documents</h5>
                    <p class="card-text">Upload and manage internal and compliance documents.</p>
                </div>
            </div>
        </div>

        <!-- Projects -->
        <div class="col-md-4">
            <div class="card shadow-sm border-secondary">
                <div class="card-body text-center">
                    <i class="bi bi-kanban-fill display-4 text-secondary"></i>
                    <h5 class="card-title mt-2">Projects</h5>
                    <p class="card-text">Track project progress, tasks, and team collaboration.</p>
                </div>
            </div>
        </div>

        <!-- Inventory -->
        <div class="col-md-4">
            <div class="card shadow-sm border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-4 text-danger"></i>
                    <h5 class="card-title mt-2">Inventory</h5>
                    <p class="card-text">Monitor stock levels, warehouses, and inventory flow.</p>
                </div>
            </div>
        </div>

        <!-- Support -->
        <div class="col-md-4">
            <div class="card shadow-sm border-dark">
                <div class="card-body text-center">
                    <i class="bi bi-headset display-4 text-dark"></i>
                    <h5 class="card-title mt-2">Support</h5>
                    <p class="card-text">Track tickets and provide customer support services.</p>
                </div>
            </div>
        </div>

        <!-- CRM -->
        <div class="col-md-4">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 text-success"></i>
                    <h5 class="card-title mt-2">CRM</h5>
                    <p class="card-text">Manage leads, customer data, and engagement history.</p>
                </div>
            </div>
        </div>

        <!-- Settings -->
        <div class="col-md-4">
            <div class="card shadow-sm border-secondary">
                <div class="card-body text-center">
                    <i class="bi bi-gear-fill display-4 text-secondary"></i>
                    <h5 class="card-title mt-2">Settings</h5>
                    <p class="card-text">Configure system preferences and user access.</p>
                </div>
            </div>
        </div>

    </div>
</div>
