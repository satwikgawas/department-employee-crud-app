@model EmployeeDepartmentCRUDApp.Models.ModuleAssign

@{
    ViewData["Title"] = "Assign Modules";
}

<div class="container-fluid">
    <h2 class="text-danger">Assign Modules</h2>
    <hr />

    <form asp-action="Create" method="post">
            <div class="card mb-4">
                <div class="card-header">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="RoleId" class="form-label"></label>
                        <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-select">
                            <option value="">Select Role</option>
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Organization</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsOrganization" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Configuration</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsConfiguration" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Department</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsDepartment" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Employee</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsEmployee" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">User Management</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsUserManagement" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">User</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsUser" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Role</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsRole" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">User Role</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsUserRole" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">HR</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsHR" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Payroll</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsPayroll" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Attendance</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsAttendance" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Leave</label>
                        <div class="col-sm-9">
                            <input type="checkbox" class="form-check-input" asp-for="IsLeave" />
                        </div>
                    </div>
                </div>
            </div>
        }

        <button type="submit" class="btn btn-primary mt-3">Save</button>
    </form>
</div>
