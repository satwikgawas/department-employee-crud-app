@{
    ViewData["Title"] = "Delete Leave";
}
@model EmployeeDepartmentCRUDApp.Models.Leave
<h2 class="alert-info text-center text-danger">Delete Organization</h2>

<div>
    <h4>Are you sure you want to delete these organization?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee Name</dt>
        <dd class="col-sm-10">@Model.Employee?.EmployeeName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Leave Type</dt>
        <dd class="col-sm-10">@Model.LeaveType</dd>

        <dt class="col-sm-2">Reason</dt>
        <dd class="col-sm-10">@Model.Reason</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Leave" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>