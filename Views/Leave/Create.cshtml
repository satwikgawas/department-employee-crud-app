@{
    ViewData["Title"] = "Create Leave";
}

@model EmployeeDepartmentCRUDApp.Models.Leave

<div class="container-fluid">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="text-danger">Create Leave</h2>
        </div>
    </div>
    <hr />
</div>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="EmployeeId" class="form-label"></label>
                <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-select">
                    <option value="">Select Employee</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input type="date" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input type="date" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LeaveType" class="form-label"></label>
                <select asp-for="LeaveType" asp-items="ViewBag.LeaveTypes" class="form-select">
                    <option value="">Select Leave Type</option>
                </select>
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Reason" class="form-label"></label>
                <input type="text" asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" asp-items="ViewBag.Status" class="form-select">
                    <option value="">Select Status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success btn-sm">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
