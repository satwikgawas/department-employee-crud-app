@{
    ViewData["Title"] = "Edit Employee";
}
@model EmployeeDepartmentCRUDApp.Models.Employee

<h2 class="alert-info text-center text-danger">Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="EmployeeName" class="form-label"></label>
        <input type="text" asp-for="EmployeeName" class="form-control" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="EmployeeEmail" class="form-label"></label>
        <input type="email" asp-for="EmployeeEmail" class="form-control" />
        <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeePhone" class="form-label"></label>
        <input type="number" asp-for="EmployeePhone" class="form-control" />
        <span asp-validation-for="EmployeePhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeePosition" class="form-label"></label>
        <input type="text" asp-for="EmployeePosition" class="form-control" />
        <span asp-validation-for="EmployeePosition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId" class="form-label"></label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-select">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-success btn-sm">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
