@{
    ViewData["Title"] = "Delete Department";
}
@model EmployeeDepartmentCRUDApp.Models.Department
<div class="container-fluid">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="text-danger">Delete Department</h2>
        </div>
    </div>
    <hr />
</div>

<div>
    <h4>Are you sure you want to delete these department?</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">Department Name</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>

        <dt class="col-sm-2">Organization Name</dt>
        <dd class="col-sm-10">@Model.Organization?.OrganizationName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>