@{
    ViewData["Title"] = "Delete Role";
}
@model EmployeeDepartmentCRUDApp.Models.Role
<div class="container-fluid">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="text-danger">Delete Role</h2>
        </div>
    </div>
    <hr />
</div>

<div>
    <h4>Are you sure you want to delete these User?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Role Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>